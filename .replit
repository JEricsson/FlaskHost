modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "scrot", "tcl", "tk", "xvfb-run", "zlib", "xorg.libX11", "xorg.libXext", "xorg.libXtst"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TARNet Host Agent"

[[workflows.workflow]]
name = "TARNet Host Agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python host.py"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80
